<%- include("header.ejs")%>
<script>
    document.querySelector("nav").setAttribute("style", "display: none")
    header.setAttribute("style", "display: none")
</script>

<a class="back align-center" href="/">
    <ion-icon name="chevron-back-outline"></ion-icon>
    Back
</a>
<% if(!text) {%>
<div class="align-center border signup">
    <form class="form-content" method="POST" action="/api/user/signup">
        <h1>
            Sign up
        </h1>

        <div class="container">
            <input type="text" placeholder="Set Login" name="login">
            <input type="text" placeholder="Set Password" name="password">
            <input type="text" placeholder="Confirm Password" name="cpassword">
        </div>
        <div class="container">
            <button type="submit" id="login-comfirm">Comfirm</button>
        </div>
    </form>
    <% } else {%>
        <div class="message">
            <%- text %>
        </div>
    <% } %>
</div>
</body>
</html>